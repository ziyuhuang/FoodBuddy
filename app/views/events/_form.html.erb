<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="input-field col s12 m8 offset-m2">
      <h1>Host Event</h1>
    </div>
    <% if @restaurant.nil? %>
      <div class="input-field col s12 m8 offset-m2">
        <%= f.label :restaurant_id %><br>
        <%= f.text_field :restaurant_id %>  
      </div>
    <% else %>
     <div class="field col s12 m8 offset-m2">
        <label for="disabled">Restaurant</label>
        <input disabled value="<%= @restaurant.name %>" id="disabled" type="text" class="validate">
        <%= f.hidden_field :restaurant, :value => @restaurant.yelp_id %>
      </div>
    <% end %>
    
    <div class="input-field col s12 m8 offset-m2">
      <%= f.label :time %><br>
      <%= f.text_field :time, class: 'timepicker' %>  
      <script type="text/javascript">
        // $('.datepicker').pickadate({
        //   selectMonths: true, // Creates a dropdown to control month
        //   selectYears: 15 // Creates a dropdown of 15 years to control year
        // });
        $('.timepicker').pickatime();
      </script>
    </div>
    <div class="input-field col s12 m8 offset-m2">
      <%= f.label :message %><br>
      <%= f.text_area :message, class: 'materialize-textarea' %>
    </div>
    <div class="actions input-field col s12 m8 offset-m2">
      <%= f.submit 'Host Event', class:'btn waves-effect waves-light' %>
    </div>
  </div>
<% end %>
