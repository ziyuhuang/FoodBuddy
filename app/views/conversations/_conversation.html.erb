<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text message_content">
        <div class="media-left">
          <a href="#"><img class="media-object" src="http://placehold.it/80x80" alt="..."></a>
        </div>

        <div class="media-body">
          <p> <%= conversation.originator.firstname %> </p>
          <p><small><b>Subject: </b><%= conversation.subject %></small></p>
          <p><small><b>Date: </b><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small></p>
          <p><small><b>Message: </b><%= truncate conversation.messages.last.body, length: 200 %></small></p>
        </div>
      </div>

      <div class="card-action">
        <%= link_to "View", conversation_path(conversation)  %>
      </div>
    </div>
  </div>
</div>